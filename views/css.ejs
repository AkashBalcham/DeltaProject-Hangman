<head>
    <title>
        Hangman <%= page%>
    </title>

    <!-- Tektur Font -->
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet"> -->

    

    <!-- Dancing script -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- 2p font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap">

    <!-- Play font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Play&display=swap">

    <!-- Quicksand font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body{
            /* font-family: 'Open Sans', sans-serif; */
            font-family: 'Press Start 2P', monospace;
            /* background-image: url('back-img-2.jpg'); */
            background-image: url('https://img.freepik.com/premium-vector/chalkboard-with-frame_268357-27.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: end;
        }
        a{
            text-decoration: none;
        }

        .first-flex{
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 10%;
            margin-left: 10%;
            margin-right: 10%;
        }
        .title{
            color: white;
            /* font-family: Tektur; */
            /* font-family: 'Press Start 2P', monospace; */
            font-family: 'Dancing script', monospace;
            font-size: 6rem;
            margin-top: 5%;
            margin-bottom: 2%;
            text-align: center;
            align-items: center;
            
        }

        .name{
            color: white;
            /* font-family: Tektur; */
            font-family: 'Play', sans-serif;
            font-size: 160px;
            display: flex;
            margin-top: 8%;
            /* margin-left: 385px; */
            margin-left: auto;
            margin-right: auto;
            width: 875px;
            height: 300px;
            transform: rotate(-10deg);
            justify-content: space-between;
            align-items: center;
        }
        .name p{
            text-decoration: underline;
            animation: fadeEffect 2s linear 5;
            opacity: 1;
            /* color: transparent; */
        }

        .name p:nth-child(1) {
        animation-delay: 1.5s;
        }

        .name p:nth-child(2) {
        animation-delay: 0.9s;
        }

        .name p:nth-child(3) {
        animation-delay: 0.3s;
        }

        .name p:nth-child(4) {
        animation-delay: 1.2s;
        }

        .name p:nth-child(5) {
        animation-delay: 0.6s;
        }

        .name p:nth-child(6) {
        animation-delay: 0s;
        }

        .name p:nth-child(7) {
        animation-delay: 1.8s;
        }

        @keyframes fadeEffect {
            0% {
                color: white;
            }
            25% {
                color: transparent;
            }
            75% {
                color: transparent;
            }
            50% {
                color: white;
            }
            100% {
                color: white;
            }
        }

        @keyframes fadeIn {
            0% { opacity: 0;}
            50% { opacity: 0.5;}
            100% { opacity: 1;}
        }

        @keyframes fadeInLeft {
            0% { transform: translateX(-3000px);}
            50% { transform: translateX(-1400px);}
            100% { transform: translateX(0px);}
        }
        @keyframes fadeInRight {
            0% { transform: translateX(3000px);}
            50% { transform: translateX(1400px);}
            100% { transform: translateX(0px);}
        }

        .local-2p, .login-link, .sign-up-link {
            /* font-family: 'Press Start 2P', monospace; */
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            /* margin-top: 80px; */
            font-size: 2em;
            color: white;
            background-color: transparent;
            border: white solid 5px;
            width: 300px;
            height: 100px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            transition: transform 300ms;
            border-radius: 50px;
        }
        .login-link{
            animation: fadeInLeft 1000ms cubic-bezier(0, 0, 0.51, 1.51) 0s 1;
            /* margin-bottom: 40px; */
        }
        .sign-up-link{
            animation: fadeInRight 1000ms cubic-bezier(0, 0, 0.51, 1.51) 0s 1;
            margin-top: 0;
        }
        .local-2p{
            animation: fadeIn 1000ms linear 1;
        }
        .common-hover:hover{
            transform: scale(1.4, 1.2);
            cursor: pointer;
        }

        /* .signup-form, .login-form{ */
        .form{
            /* font-family: 'Press Start 2P', monospace; */
            margin-left: auto;
            margin-right: auto;
            margin-top: 0px;
            /* margin-bottom: 30px; */
            display: block;
        }
        .login-form p{
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            color: white;
            font-size: 1.5rem;
        }
        .signup-form p{
            font-family: 'Lucida Fax';
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            color: white;
            font-size: 1.5rem;
        }

        .local-multiplayer-form{
            margin-top: 4%;
        }
        .local-multiplayer-form p{
            font-family: 'Lucida Fax';
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            color: white;
            font-size: 1.5rem;
        }
        .username-inp, .password-inp, .set-word-inp {
            color: white;
            font-size: 2.5rem;
            margin-left: auto;
            margin-right: auto;
            display: block;
            width: 600px;
            height: 100px;
            border-radius: 40px;
            margin-bottom: 40px;
            background-color: transparent;
            border: white 5px solid;
            padding-left: 20px;
        }
        .rounds-inp, .user-inp {
            color: white;
            font-size: 2.5rem;
            margin-left: auto;
            margin-right: auto;
            display: block;
            width: 400px;
            height: 66.67px;
            border-radius: 40px;
            margin-bottom: 40px;
            background-color: transparent;
            border: white 5px solid;
            padding-left: 20px;
        }

        .sign-up-button, .start-local, .set-word-button {
            width: 200px;
            height: 90px;
            color: white;
            margin-left: 44%;
            margin-top: 25px;
            /* margin-right: auto; */
            background-color: transparent;
            border: white 5px solid;
            font-family: 'Press Start 2P', monospace;
            font-size: 1.5rem;
            transition: transform 400ms;
            border-radius: 30px;
        }
        .start-local{
            margin-top: 5px;
        }
        .start-local:hover{
            cursor: pointer;
            transform: translateY(-20px);
            transition: transform 100ms;
        }
        .sign-up-button:hover{
            cursor: pointer;
            transform: translateY(-20px);
            transition: transform 100ms;
        }

        .msg{
            text-align: center;
            color: yellow;
            margin-top: 18px;
        }

        @keyframes multiColor {
            0% {
                border: blue 5px solid;
                color: blue;
            }
            20% {
                border: green 5px solid;
                color: green;
            }
            40% {
                border: yellow 5px solid;
                color: yellow;
            }
            60% {
                border: red 5px solid;
                color: red;
            }
            80% {
                border: purple 5px solid;
                color: purple;
            }
            100%{
                border: blue 5px solid;
                color: blue;
            }

        }
        .login-button{
            display: block;
            width: 200px;
            height: 90px;
            color: white;
            /* margin-left: 44%; */
            margin-top: 25px;
            border-radius: 40px;
            margin-left: auto;
            margin-right: auto;
            background-color: transparent;
            border: white 5px solid;
            font-family: 'Press Start 2P', monospace;
            font-size: 1.5rem;
            transition: 100ms;
        }
        .login-button:hover{
            transform: scale(1.3, 1.1);
            animation: multiColor 1500ms linear infinite;
            cursor: pointer;
        }

        .new-game-button{
            animation: popup 500ms linear 1;
            font-family: 'Press Start 2P', monospace;
            font-size: 1.4em;
            background-color: #961599;
            color: white;
            border: white 5px solid;
            width: 20%;
            height: 10%;
            border-radius: 30px;
            margin-bottom: 5%;
            display: block;
            margin-left: auto;
            margin-right: auto;
            transition: transform 200ms;
        }
        .new-game-button:hover{
            cursor: pointer;
            transform: scale(1.3, 1.1);
        }
        .username-display{
            color: white;
            text-align: center;
            font-size: 1.5rem;
            margin-bottom: 4%;
        }
        .grid-container{
            display: flex;
            justify-content: center;
        }
        .button-row{
            width: 100%;
            height: 11%;
            display: flex;
            align-items: center;
            justify-content: center;
            /* background-color: lightcoral; */
            margin-bottom: 4%;
            margin-top: 4.5%;
            margin-left: auto;
            margin-right: auto;
        }

        @keyframes popup {
            0% { transform: scale(0, 0);}
            50% { transform: scale(0.5, 0.5);}
            100% { transform: scale(1, 1);}
        }
        .cell{
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 30%;
            height: 100%;
            border-radius: 30px;
            /* background-color: #961599; */
            /* background-color: rgba(150, 21, 153, 0.5); */
            /* background-color: #74db7d; */
            background-color: rgba(34, 23, 105, 0.7);
            border: white 5px solid;
            margin-right: 6%;
            margin-left: 6%;
            transition: transform 300ms;
        }
        .cell1{
            animation: fadeInLeft 1000ms cubic-bezier(0, 0, 0.13, 1.28) 1;
        }
        .cell2{
            animation: fadeInRight 1000ms cubic-bezier(0, 0, 0.13, 1.28) 1;
        }
        .cell3{
            animation: fadeInLeft 1000ms cubic-bezier(0, 0, 0.13, 1.28) 1;
        }
        .cell4{
            animation: fadeInRight 1000ms cubic-bezier(0, 0, 0.13, 1.28) 1;
        }
        .cell:hover{
            transform: scale(1.4, 1.2);
            cursor: pointer;
        }
        
        .stats-img, .coins-img, .ach-img, .hints-img{
            width: 30%;
            height: 180%;
        }
        .hints-img{
        height: 200%;
        }

        .button-content{
            color: white;
            font-size: 1.7em;
            padding-right: 20%;
        }
        .ach{
            padding-left: 9%;
        }
        .mode {
            animation: fadeInLeft 1500ms ease-in 1;
            background-color: #961599;
            font-family: 'Press Start 2P', monospace;
            font-size: 130%;
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 20%;
            height: 15%;
            color: white;
            /* background-color: transparent; */
            border: white 5px solid;
            border-radius: 40px;
            margin-top: 7%;
            margin-bottom: 4%;
            transition: transform 300ms;
        }
        .mode:hover{
            cursor: pointer;
            transform: scale(1.4, 1.2);
        }
        .p1{
            animation: fadeInLeft 1500ms cubic-bezier(0.42, 0, 0.24, 1.28) 1;
        }
        
        .online-2p{
            animation: fadeInLeft 1500ms cubic-bezier(0.42, 0, 0.24, 1.28) 1 750ms;
        }
        .local-2p, .online-2p{
            line-height: 2rem;
        }
        @keyframes leftToCenter {
            0% { transform: translateX(-2000px); }
            50% { transform: translateX(-1000px); }
            100% { transform: translateX(0px); }
        }
        @keyframes centerToRight {
            0% { transform: translateX(0px); }
            50% { transform: translateX(1000px); }
            100% { transform: translateX(2000px); }
        }
        .round, .setter{
            /* animation: leftToRight 3000ms ease-in 1; */
            text-align: center;
            /* margin: 0 auto; */
            margin-top: 3%;
            font-size: 2rem;
        }
        .round{
            
            animation: leftToCenter 2000ms ease-in 1;
        }
        .setter{
            color: white;
            margin: 8%;
            margin-bottom: 2%;
        }
        .set-word-button:hover{
            cursor: pointer;
            transform: translateY(-20px);
            transition: transform 100ms;
        }
        .round.finished{
            animation: centerToRight 2000ms ease-out 2100ms 1;
        }
        .word-set-form{
            margin-top: 5%;
        }

        .word-display, .underline-display{
            display: flex;
            justify-content: center;
            color: white;
            font-size: 2.4rem;
        }
        .word-display{
            margin-top: 5%;
            margin-bottom: 0;
        }
        .underline-display{
            margin-top: 0;
        }
        .word-display p{
            margin-left: 10px;
            margin-bottom: 0px;
        }
        .underline-display p {
            margin-top: 0px;
            margin-left: 10px;
        }

        .keyboard-grid{
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size: 2em;
            margin-top: 0%;
            margin-left: 5%;
            margin-right: 5%;
            display: grid;
            color: white;
            grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
            grid-template-rows: 40% 40%;
            column-gap: 10px;
            row-gap: 20px;
        }
        .unguessed{
            display: flex;
            background-color: transparent;
            border: white 5px solid;
            border-radius: 20px;
            justify-content: center;
            align-items: center;
            transition: all 200ms;
        }
        .unguessed:hover{
            color: #3489eb;
            border-color: #3489eb;
            cursor: pointer;
            opacity: 0.7;
        }
        .display{
            margin-left: 5%;
            margin-right: 5%;
            margin-top: 5%;
            margin-bottom: 2%;
            display: flex;
            justify-content: center;
        }
        .hidden{
            color: transparent;
        }
        .image{
            width: 50%;
        }
        .hangman-img{
            margin-left: 70%;
            width: 30%;
        }

        .correct, .wrong {
            font-size: 1.7em;
            position: absolute;
            top: 25%;
            bottom: 50%;
            left: 24%;
            right: 50%;
            background-color: darkorchid;
            color: white;
            display: none;
            width: 50%;
            height: 50%;
            margin-bottom: 0;
            border-radius: 40px;
            border: white 5px solid;
        }
        .continue {
            font-size: 1.5em;
            display: block;
            margin-left: auto;
            margin-right: auto;
            height: 20%;
            width: 50%;
            margin-top: 5%;
            color: white;
            background-color: transparent;
            border: white 5px solid;
            border-radius: 30px;
            transition: all 200ms;
        }
        .continue:hover{
            cursor: pointer;
            border-color: black;
            color: black;
        }

        @keyframes appear {
            0% { opacity: 0; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        .p1-score, .p2-score {
            color: white;
            font-size: 3rem;
        }
        .p1-score{
            animation: appear 1000ms ease-out 3000ms 1;
        }
        .p2-score {
            animation: appear 1000ms ease-out 7000ms 1;
        }
        .end-game-button {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 40%;
            height: 15%;
            color: white;
            background-color: transparent;
            border: white 5px solid;
            font-size: 2rem;
            border-radius: 40px;
            margin-top: 8%;
            transition: transform 200ms;
        }
        .end-game-button:hover{
            cursor: pointer;
            transform: scale(1.4, 1.2);
        }
    </style>
</head>
